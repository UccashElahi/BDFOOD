<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#212121"
    tools:context="com.example.uccash.bdfood.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="welcome foodies..!!!"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="#ffff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="#ffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/and"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="#ffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" explore.."
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textColor="#ffff"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/div"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:text="DIVISIONs"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/cornercut"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:id="@+id/ll"
       android:padding="10dp"
       android:layout_marginTop="15dp">

       <Button
           android:layout_width="64dp"
           android:layout_height="64dp"
           android:id="@+id/btn_share"
           android:background="@drawable/ic_share_black_24dp"
           android:gravity="center"
           android:layout_marginRight="5dp"/>
       <Button
           android:layout_width="64dp"
           android:layout_height="64dp"
           android:id="@+id/btn_rate"
           android:background="@drawable/ic_rate_review_black_24dp"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"/>

       <Button
           android:layout_width="64dp"
           android:layout_height="64dp"
           android:id="@+id/btn_exit"
           android:background="@drawable/ic_exit_to_app_black_24dp"
           android:layout_marginLeft="5dp"/>

   </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>